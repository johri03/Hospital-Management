<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ambulance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.whysoserious.neeraj.hospitalmanagementsystem.ambulance">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/hosp1"
        app:srcCompat="@drawable/hosp1" />

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:text="Latitude:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/lonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/latTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Longitude:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/accTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lonTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Accuracy:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/altTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Altitude:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/altTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Address:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/btnlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addressTextView"
        android:layout_marginBottom="97dp"
        android:layout_marginStart="22dp"

        android:text="Get Ambulance" />


</RelativeLayout>
